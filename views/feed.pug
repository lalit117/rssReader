html
  head
    meta(charset='utf-8')
    title #{title}
    style.
      body{
        background-color: lightCyan;
      }
      div {
        padding: 5px;
        line-height: 0.4;
      }
      p{
        position:relative;
        padding: 0 0 0 10px;
      }
      img {
         width="163";
         height="34"; 
         alt="News logo";
         border="0";
         vspace="10"
      }
      img:hover {
        box-shadow: 0 0 2px 1px rgba(0, 140, 186, 0.5);
      }
  body
  div(style="margin-bottom:20px")
    img(src="http://newsimg.bbc.co.uk/shared/bsp/xsl/rss/img/news_logo.gif")
  each item in items
    div
        a(href=item.link) #{item.title} 
        p #{item.contentSnippet}
        